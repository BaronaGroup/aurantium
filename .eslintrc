{
  "root": true,
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "browser": true,
     "commonjs": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "plugins": ["react"],
  "rules": {
    "consistent-return": 2,
    "no-unexpected-multiline": 2,
    "semi": [1, "never"],
    "no-unused-vars": [1, { "vars": "all", "args": "none" }],
    "no-var": 1,
    "eqeqeq": 1,
    "dot-notation": 1,
    "no-caller": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-implied-eval": 2,
    "no-shadow": [2, { "allow": ["err"]}],
    "no-multi-spaces": 1,
    "prefer-arrow-callback": 0,
    "no-console": 1
  },
  "globals": {
    "Promise": false,
    "__filename": true
  }
}